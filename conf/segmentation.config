    withName: 'NF_PEDIATRIC:PEDIATRIC:SEGMENTATION:CONCATENATESTATS' {
        publishDir = [
            path: { "${params.outdir}/"},
            mode: params.publish_dir_mode,
            saveAs: {
                filename -> filename.equals('versions.yml') ? null : filename
